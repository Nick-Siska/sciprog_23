#include <stdio.h>
#include <stdli.h>

// Allocate array
int *allocate(int n){
  int *p;
  p = (int *) malloc(n*sizeof(int));
  return p;
}

// Fill with ones
void fillwithones(int *array, int n){
  int i;
  for(i = 0; i < n; i++){
    array[i] = 1;
  }
}

void printarray(int *array, int n){
  int i;
  for(i = 0; i < n; i++){
    printf("a[%d]: %d\n", i, array[i]);
  }
}

void freearray(int *array){
  free(array);
}


int main(){
  int n, *a;
  printf("Size of the array \n");
  scanf("%d",&n);
  a = allocate(n);
  fillwithones(a,n);
  printarray(a,n);
  freearray(a);

  a = NULL;
  
  return 0;

}
